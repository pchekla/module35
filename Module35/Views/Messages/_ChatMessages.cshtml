@model Module35.ViewModels.ChatViewModel

@if (Model.Messages.Any())
{
    foreach (var message in Model.Messages)
    {
        <div class="message @(message.IsFromCurrentUser ? "message-sent" : "message-received")">
            <div class="message-content">@message.Text</div>
            <div class="message-time">@message.SentDate.ToString("HH:mm, dd MMM")</div>
        </div>
    }
}
else
{
    <div class="text-center text-muted my-5">
        <i class="bi bi-chat-dots fs-1"></i>
        <p class="mt-3">У вас пока нет сообщений с @Model.Friend.GetFullName()</p>
        <p>Начните общение прямо сейчас!</p>
    </div>
} 