@model Module35.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Завершение регистрации";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">Завершение регистрации в CosmoBazar</h2>
                    
                    <form method="post" asp-controller="Register" asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <!-- Скрытые поля для сохранения данных с первого шага -->
                        <input type="hidden" asp-for="FirstName" />
                        <input type="hidden" asp-for="LastName" />
                        <input type="hidden" asp-for="Date" />
                        <input type="hidden" asp-for="Month" />
                        <input type="hidden" asp-for="Year" />
                        
                        <div class="form-group mb-3">
                            <label asp-for="Login">Никнейм</label>
                            <input asp-for="Login" class="form-control" placeholder="Введите никнейм" />
                            <span asp-validation-for="Login" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="EmailReg">Email</label>
                            <input asp-for="EmailReg" class="form-control" placeholder="Введите email" />
                            <span asp-validation-for="EmailReg" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-3">
                            <label asp-for="PasswordReg">Пароль</label>
                            <input asp-for="PasswordReg" type="password" class="form-control" placeholder="Введите пароль" />
                            <span asp-validation-for="PasswordReg" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group mb-4">
                            <label asp-for="PasswordConfirm">Подтверждение пароля</label>
                            <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="Повторите пароль" />
                            <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-success w-100">Завершить регистрацию</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
} 