@model ErrorViewModel
@{
    ViewData["Title"] = "Ошибка";
}

<div class="container fade-in">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card animate-on-scroll">
                <div class="card-body text-center">
                    <h2 class="card-title">Ошибка</h2>
                    
                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted">
                            <small>Идентификатор запроса: <code>@Model.RequestId</code></small>
                        </p>
                    }
                    
                    <div class="mt-4">
                        <div class="image-container">
                            <img src="~/img/404.png" alt="Ошибка" class="responsive-image mb-4" style="max-width: 250px;" />
                        </div>
                        
                        <h3>Что-то пошло не так</h3>
                        <p>Запрашиваемая страница не найдена или у вас нет прав для её просмотра.</p>
                        <p>Возможно, необходимо авторизоваться для доступа к этой странице.</p>
                        
                        <div class="mt-4">
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Вернуться на главную</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 