@model Module35.ViewModels.FriendsListViewModel
@{
    ViewData["Title"] = "Мои друзья";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <div class="card shadow mb-4">
                <div class="card-header py-3 d-flex justify-content-between align-items-center">
                    <h5 class="m-0 font-weight-bold text-primary">Поиск друзей</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get" class="mb-4">
                        <div class="input-group">
                            <input type="text" name="query" value="@Model.SearchQuery" class="form-control" placeholder="Введите имя или email..." />
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">Поиск</button>
                            </div>
                        </div>
                    </form>

                    @if (!string.IsNullOrEmpty(ViewBag.SearchErrorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @ViewBag.SearchErrorMessage
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.SearchQuery) && Model.SearchResults.Any())
                    {
                        <h6 class="mt-4 mb-3">Результаты поиска для "@Model.SearchQuery"</h6>
                        <div class="row">
                            @foreach (var user in Model.SearchResults)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-body d-flex">
                                            <div class="mr-3">
                                                <img src="@(string.IsNullOrEmpty(user.Image) ? "/images/default-avatar.png" : user.Image)" 
                                                     class="rounded-circle" alt="Avatar" style="width: 60px; height: 60px; object-fit: cover;">
                                            </div>
                                            <div>
                                                <h6 class="mb-1">
                                                    <a asp-controller="Friends" asp-action="ViewProfile" asp-route-userId="@user.Id">
                                                        @user.FullName
                                                    </a>
                                                </h6>
                                                <p class="text-muted small mb-2">
                                                    @(user.BirthDate.HasValue ? user.BirthDate.Value.ToShortDateString() : "")
                                                </p>
                                                @if (user.RelationId.HasValue && user.IsRequestPending)
                                                {
                                                    <span class="badge badge-warning">Запрос в ожидании</span>
                                                }
                                                else if (user.RelationId.HasValue && !user.IsRequestPending)
                                                {
                                                    <span class="badge badge-success">Друзья</span>
                                                }
                                                else
                                                {
                                                    <form asp-action="SendFriendRequest" method="post">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="userId" value="@user.Id">
                                                        <button type="submit" class="btn btn-sm btn-primary">Добавить в друзья</button>
                                                    </form>
                                                }
                                                <div class="mt-3 d-flex justify-content-between">
                                                    <a href="/UserProfile/@user.Id" class="btn btn-primary btn-sm">
                                                        <i class="bi bi-person-fill me-1"></i> Профиль
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(Model.SearchQuery))
                    {
                        <div class="alert alert-info mt-3" role="alert">
                            По запросу "@Model.SearchQuery" ничего не найдено.
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <h5 class="m-0 font-weight-bold text-primary">Мои друзья (@Model.Friends.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Friends.Any())
                    {
                        <div class="row">
                            @foreach (var friend in Model.Friends)
                            {
                                <div class="col-md-6 mb-3">
                                    <div class="card">
                                        <div class="card-body d-flex">
                                            <div class="mr-3">
                                                <img src="@(string.IsNullOrEmpty(friend.Image) ? "/images/default-avatar.png" : friend.Image)" 
                                                     class="rounded-circle" alt="Avatar" style="width: 60px; height: 60px; object-fit: cover;">
                                            </div>
                                            <div>
                                                <h6 class="mb-1">
                                                    <a asp-controller="Friends" asp-action="ViewProfile" asp-route-userId="@friend.Id">
                                                        @friend.FullName
                                                    </a>
                                                </h6>
                                                <p class="text-muted small mb-2">
                                                    @(friend.BirthDate.HasValue ? friend.BirthDate.Value.ToShortDateString() : "")
                                                </p>
                                                <form asp-action="RemoveFriend" method="post" style="display: inline;">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="relationId" value="@friend.RelationId">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">Удалить из друзей</button>
                                                </form>
                                                <div class="mt-3 d-flex justify-content-between">
                                                    <a href="/UserProfile/@friend.Id" class="btn btn-primary btn-sm">
                                                        <i class="bi bi-person-fill me-1"></i> Профиль
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">У вас пока нет друзей. Используйте поиск, чтобы найти друзей.</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-4">
            @if (Model.PendingRequests.Any())
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Запросы в друзья (@Model.PendingRequests.Count)</h6>
                    </div>
                    <div class="card-body">
                        @foreach (var request in Model.PendingRequests)
                        {
                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                <div class="mr-3">
                                    <img src="@(string.IsNullOrEmpty(request.Image) ? "/images/default-avatar.png" : request.Image)" 
                                         class="rounded-circle" alt="Avatar" style="width: 50px; height: 50px; object-fit: cover;">
                                </div>
                                <div>
                                    <h6 class="mb-1">
                                        <a asp-controller="Friends" asp-action="ViewProfile" asp-route-userId="@request.Id">
                                            @request.FullName
                                        </a>
                                    </h6>
                                    <div class="mt-1">
                                        <form asp-action="AcceptFriendRequest" method="post" style="display: inline-block;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="relationId" value="@request.RelationId">
                                            <button type="submit" class="btn btn-sm btn-success">Принять</button>
                                        </form>
                                        <form asp-action="DeclineFriendRequest" method="post" style="display: inline-block;">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="relationId" value="@request.RelationId">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Отклонить</button>
                                        </form>
                                    </div>
                                    <div class="mt-3 d-flex justify-content-between">
                                        <a href="/UserProfile/@request.Id" class="btn btn-primary btn-sm">
                                            <i class="bi bi-person-fill me-1"></i> Профиль
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }

            @if (Model.OutgoingRequests.Any())
            {
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary">Исходящие запросы (@Model.OutgoingRequests.Count)</h6>
                    </div>
                    <div class="card-body">
                        @foreach (var request in Model.OutgoingRequests)
                        {
                            <div class="d-flex align-items-center mb-3 pb-3 border-bottom">
                                <div class="mr-3">
                                    <img src="@(string.IsNullOrEmpty(request.Image) ? "/images/default-avatar.png" : request.Image)" 
                                         class="rounded-circle" alt="Avatar" style="width: 50px; height: 50px; object-fit: cover;">
                                </div>
                                <div>
                                    <h6 class="mb-1">
                                        <a asp-controller="Friends" asp-action="ViewProfile" asp-route-userId="@request.Id">
                                            @request.FullName
                                        </a>
                                    </h6>
                                    <div class="mt-1">
                                        <form asp-action="CancelFriendRequest" method="post">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="relationId" value="@request.RelationId">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">Отменить запрос</button>
                                        </form>
                                    </div>
                                    <div class="mt-3 d-flex justify-content-between">
                                        <a href="/UserProfile/@request.Id" class="btn btn-primary btn-sm">
                                            <i class="bi bi-person-fill me-1"></i> Профиль
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            toastr.success('@TempData["SuccessMessage"]');
        });
    </script>
}

@if (TempData["ErrorMessage"] != null)
{
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            toastr.error('@TempData["ErrorMessage"]');
        });
    </script>
} 